{
  "name": "gqlschemagen-vscode",
  "displayName": "GQL Schema Gen",
  "description": "Go struct tag and GraphQL directive validation for gqlschemagen",
  "version": "0.0.1",
  "publisher": "pablor21",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "url": "https://github.com/pablor21/gqlschemagen-vscode"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "go",
    "golang",
    "graphql",
    "gql",
    "validation"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gqlschemagen.validateTags",
        "title": "GQL: Validate Struct Tags"
      },
      {
        "command": "gqlschemagen.showSchema",
        "title": "GQL: Show Generated Schema Preview"
      }
    ],
    "configuration": {
      "title": "GQL Schema Gen",
      "properties": {
        "gqlschemagen.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable gql tag validation"
        },
        "gqlschemagen.validation.checkTypeReferences": {
          "type": "boolean",
          "default": true,
          "description": "Warn when referenced types in include/omit/ro/wo lists don't exist"
        },
        "gqlschemagen.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable autocompletion for gql tags"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "esbuild": "^0.19.x",
    "eslint": "^8.x",
    "typescript": "^5.3.x",
    "@vscode/vsce": "^3.7.0"
  },
  "dependencies": {
    "tree-sitter": "^0.21.0",
    "tree-sitter-go": "^0.21.0"
  }
}
